{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block stylesheets %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }

        .team {
            padding-left: 40px;
        }

        .card {
            box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
        }

        .card:hover {
            box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
        }

        tr{
            border-bottom: 1px solid #000000
        }
    </style>
{% endblock %}

{% block body %}

    <div class="example-wrapper">
        {% for match in matches %}
            <div class="card">
                <h1>{{ match.teams[0].name }} vs {{ match.teams[1].name }}</h1>
                <table>
                    <tr>
                        <td>Date</td>
                        <td>{{ match.date }}</td>
                    </tr>
                    <tr>
                        <td>Time</td>
                        <td>{{ match.time }}</td>
                    </tr>
                    <tr>
                        <td>Mode</td>
                        <td>{{ match.time }}</td>
                    </tr>
                    <tr>
                        <td>Map</td>
                        <td>{{ match.map }}</td>
                    </tr>
                </table>
                <a src="{{ match.link }}">Video Link</a>
                <div>
                    {% for team in match.teams %}
                        <div>
                            <h2>{{ team.name }}</h2>
                            {% for member in team.members %}
                                <table>
                                    <tr>
                                        <td>Name:</td>
                                        <td>{{ member.name }}</td>
                                    </tr>
                                    <tr>
                                        <td>Herkunft</td>
                                        <td>{{ member.origin }}</td>
                                    </tr>
                                </table>
                            {% endfor %}
                        </div>
                    {% endfor %}
                </div>
                <br>
            </div>
        {% endfor %}

    </div>
{% endblock %}
